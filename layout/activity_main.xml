<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#b2cbea"
    android:padding="16dp" >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="304dp"
        android:layout_height="301dp"
        app:srcCompat="@mipmap/icone_de_tarefas" />

    <TextView
        android:id="@+id/textInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textColor="#2b3c65"
        android:textStyle="bold"
        android:shadowColor="#62c3a6"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="20"
        android:text="Seja bem-vindo ao To do List!" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#fecb4d"
        android:textColor="#2b3c65"
        android:textSize="32dp"
        android:text="Entrar" />

</LinearLayout>